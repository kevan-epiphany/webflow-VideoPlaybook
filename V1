    <!-- UNIFIED SCRIPT FOR ALL PARTS -->
    <script>
    window.addEventListener('load', function() {
    
        // --- INITIALIZER FOR PART 1 ---
        function initPart1() {
            const container = document.getElementById('part1-container');
            if (!container) return;
    
            const mainNav = container.querySelector('#main-nav');
            const tabs = mainNav ? Array.from(mainNav.querySelectorAll('.tab-btn')) : [];
            const sections = Array.from(container.querySelectorAll('main > .content-section'));
            const accordions = container.querySelectorAll('.accordion-header');
            let trustChart, metricsChart;
    
            function switchTab(targetId) {
                tabs.forEach(tab => {
                    const isActive = tab.dataset.target === targetId;
                    tab.classList.toggle('tab-active', isActive);
                    tab.classList.toggle('tab-inactive', !isActive);
                });
                sections.forEach(section => {
                    section.classList.toggle('active', section.id === targetId);
                });
                
                if (targetId === 'content-mindset' && !trustChart) initTrustChart();
                if (targetId === 'content-pitfalls' && !metricsChart) initMetricsChart();
            }
    
            function initTrustChart() {
                const ctx = container.querySelector('#trustChart')?.getContext('2d');
                if (!ctx) return;
                trustChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: { labels: ['Prefer Authentic Personal Content', 'Prefer Polished Corporate Ads'], datasets: [{ data: [73, 27], backgroundColor: ['#F5D251', '#475569'], borderColor: '#1e293b', borderWidth: 4 }] },
                    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom', labels: { color: '#E0E0E0', font: { family: "'Poppins', sans-serif" } } }, title: { display: false }, tooltip: { callbacks: { label: (c) => `${c.label}: ${c.raw}%` }, backgroundColor: '#1f2937', titleColor: '#ffffff', bodyColor: '#cbd5e1', titleFont:{family:"'Poppins', sans-serif"}, bodyFont:{family:"'Poppins', sans-serif"} } }, cutout: '60%' }
                });
            }
    
            function initMetricsChart() {
                const ctx = container.querySelector('#metricsChart')?.getContext('2d');
                if (!ctx) return;
                metricsChart = new Chart(ctx, {
                    type: 'bar',
                    data: { labels: ['Likes', 'Followers', 'Avg. Watch Time', 'Comment Quality', 'Pipeline Influence'], datasets: [{ label: 'Impact on Trust', data: [10, 20, 75, 85, 95], backgroundColor: (c) => (c.dataset.data[c.dataIndex] < 50 ? '#475569' : '#F5D251'), borderColor: '#e4bf4a', borderWidth: 1, borderRadius: 4 }] },
                    options: { indexAxis: 'y', responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false }, title: { display: true, text: 'Vanity Metrics vs. Impact Metrics', color: '#E0E0E0', font: { size: 16, family: "'Poppins', sans-serif" } }, tooltip: { callbacks: { label: (c) => `  ${c.raw}% Impact` }, backgroundColor: '#1f2937', titleColor: '#ffffff', bodyColor: '#cbd5e1', titleFont:{family:"'Poppins', sans-serif"}, bodyFont:{family:"'Poppins', sans-serif"} } }, scales: { x: { beginAtZero: true, max: 100, grid: { color: 'rgba(255, 255, 255, 0.1)' }, ticks: { color: '#94a3b8', callback: (v) => v + '%' } }, y: { grid: { display: false }, ticks: { color: '#E0E0E0' } } } }
                });
            }
    
            if (mainNav) {
                mainNav.addEventListener('click', (e) => {
                    const clickedTab = e.target.closest('.tab-btn');
                    if (clickedTab) switchTab(clickedTab.dataset.target);
                });
            }
            
            accordions.forEach(header => {
                header.addEventListener('click', () => {
                    const content = header.nextElementSibling;
                    const icon = header.querySelector('.accordion-icon');
                    const isOpening = !content.style.maxHeight || content.style.maxHeight === '0px';
                    content.style.maxHeight = isOpening ? content.scrollHeight + 'px' : '0px';
                    icon.textContent = isOpening ? '-' : '+';
                });
            });
    
            if (tabs.length > 0) switchTab(tabs[0].dataset.target);
        }
    
        // --- INITIALIZER FOR PART 2 ---
        function initPart2() {
            const container = document.getElementById('part2-container');
            if (!container) return;
            const cells = container.querySelectorAll('.matrix-cell');
            const detailsEl = container.querySelector('#matrix-details');
            const data = { /* ... Part 2 data object ... */ };
            
            const contentData = {
                know_entertain: { title: "KNOW + ENTERTAIN: Get Seen", video: "Video Idea: 'A Day in the Life' Snippet", video_desc: "A 30-second, phone-shot video showing a relatable moment, like your commute, making coffee, or a cat interrupting a Zoom call. It’s low-effort and highly humanising.", scripting: "Structure: No script needed. Speak authentically. Start with 'Here’s something you don’t see every day...' and end with a simple sign-off.", post: "Post Idea: A selfie at an industry event with the caption, 'The best part of [Event Name] isn't the talks, it's the conversations in the hallway. Great to connect with so many smart people.'", ai_prompt: "Act as a B2B content strategist. Write a short, relatable LinkedIn post (under 150 words) from a CEO in the [Your Industry] sector. The post should be based on a humorous or unexpected everyday work moment like [e.g., a pet interrupting a video call]. The goal is to be entertaining and build familiarity. Avoid any sales language or CTAs." },
                know_inspire: { title: "KNOW + INSPIRE: Share Your 'Why'", video: "Video Idea: 'Mission Motivation'", video_desc: "A 60-second video explaining the core mission of your company and the personal story behind why it matters to you. This connects your business goals to a human purpose.", scripting: "Structure (StoryBrand): 1. Problem: State a problem your audience faces. 2. Vision: Share your vision for a better way. 3. Motivation: Briefly share the personal story that drives this vision.", post: "Post Idea: Share an article about a breakthrough in your industry. Add your commentary: 'This is huge. It’s a step closer to the future we’ve been working towards, where [Your Vision].'", ai_prompt: "Act as a B2B storyteller. Draft a 60-second video script for a CEO in [Your Industry]. The topic is the company's core mission. Use the StoryBrand framework: define a key customer problem, articulate a guiding principle or vision that addresses it, and briefly tell the personal story or belief that inspired the company's founding. The tone should be passionate and visionary." },
                like_entertain: { title: "LIKE + ENTERTAIN: Show Personality", video: "Video Idea: 'Behind the Scenes' Tour", video_desc: "A quick, unscripted tour of your workspace or a project you're working on. It breaks down the corporate barrier and shows the real environment where the work happens.", scripting: "Structure: Conversational. 'A few of you asked what our office looks like, so I wanted to give you a quick tour...' Highlight one or two interesting details.", post: "Post Idea: A poll comparing two industry buzzwords with a humorous comment. 'Which of these terms do you think we should officially retire in 2025? Cast your vote!'", ai_prompt: "Act as a B2B content creator. Write a short, engaging LinkedIn post (under 150 words) from a Founder in [Your Industry]. The goal is to show personality and be entertaining. Create a poll that playfully pits two common industry buzzwords or practices against each other. Add a witty, one-sentence observation to spark conversation." },
                like_inspire: { title: "LIKE + INSPIRE: Share Values", video: "Video Idea: 'A Lesson from a Mistake'", video_desc: "A video sharing a story about a professional mistake you made and the key lesson you learned. Supported by Self-Disclosure Theory, this vulnerability builds immense trust.", scripting: "Structure: 1. The Situation: Briefly set the scene. 2. The Mistake: Clearly state what went wrong. 3. The Lesson: Articulate the valuable takeaway. 4. The Application: Explain how it shapes your leadership today.", post: "Post Idea: A photo from a personal challenge (e.g., a hike, a marathon) with copy connecting the experience to a business value like resilience or preparation.", ai_prompt: "Act as an executive communications coach. Draft a 90-second video script for a CEO in [Your Industry] based on the theme 'A Lesson from a Mistake'. Structure the narrative: 1. The Situation (a brief context). 2. The Mistake (a candid admission of a professional error). 3. The Lesson (the key insight gained). 4. The Application (how that lesson improves their leadership or business today). The tone should be humble, reflective, and confident." },
                like_educate: { title: "LIKE + EDUCATE: Challenge Norms", video: "Video Idea: 'Myth vs. Fact'", video_desc: "A direct-to-camera video debunking a common industry myth or 'best practice'. This positions you as a critical thinker and an authority who challenges the status quo.", scripting: "Structure (Problem-Insight-Solution): 1. The Myth (Problem): 'You've probably been told that...' 2. The Flaw (Insight): 'But here's why that's wrong...' 3. The Truth (Solution): 'A better way to think about it is...'", post: "Post Idea: A text post starting with 'Unpopular opinion: [Your counter-intuitive take on an industry trend]. Here’s why...' followed by 3 bullet points.", ai_prompt: "Act as a B2B thought leader and scriptwriter. Create a 90-second video script for a Founder in [Your Industry] with the title 'Myth vs. Fact'. The script must debunk a widely held belief or common practice in their field. Use the Problem-Agitate-Solve framework: 1. State the common myth (Problem). 2. Explain why following it leads to negative outcomes (Agitate). 3. Present your counter-intuitive approach as the better solution (Solve). The tone should be confident and insightful." },
                trust_entertain: { title: "TRUST + ENTERTAIN: Show Your Team", video: "Video Idea: 'Meet the Expert'", video_desc: "A short, casual interview with a key team member, asking them about their role and one piece of advice they have for clients. This builds trust in your entire organisation, not just you.", scripting: "Structure: Keep it simple. 'I'm here with [Name], our [Role]. [Name], what’s the #1 mistake you see people make when it comes to [Their Area of Expertise]?'", post: "Post Idea: A group photo of your team at a company event or volunteering. The copy should celebrate the team's contribution to the company's mission.", ai_prompt: "Act as a B2B content strategist. Write a LinkedIn post from a CEO introducing a key team member. The goal is to humanise the business and build trust in the team's expertise. The post should tag the team member and ask them one insightful question about their role, such as 'What’s the most common question you get from our clients?'. The tone should be celebratory and collaborative." },
                trust_inspire: { title: "TRUST + INSPIRE: Showcase Success", video: "Video Idea: 'Client Proof Capsule'", video_desc: "A 45-90 second video where you briefly outline a client's problem (anonymised) and the successful outcome you delivered. Use a powerful client quote as on-screen text.", scripting: "Structure: 1. The Client's Problem: 'A client came to us struggling with...' 2. Our Approach: 'Instead of the usual approach, we...' 3. The Result: 'The outcome was [specific, quantifiable result].'", post: "Post Idea: Share a client's testimonial as a quote graphic (with their permission). In the copy, thank them and highlight one specific aspect of the collaboration that made it successful.", ai_prompt: "Act as a B2B case study writer. Draft a 75-second video script for a Founder in [Your Industry] that showcases a client success story. Structure it using the Problem-Solution-Result framework: 1. Describe the client's challenge without naming them. 2. Briefly explain your company's unique approach or insight. 3. State the specific, quantifiable result achieved. Include a placeholder for a powerful client quote to be displayed as on-screen text." },
                trust_educate: { title: "TRUST + EDUCATE: Solve a Problem", video: "Video Idea: 'Deep-Dive Explainer'", video_desc: "A 3-5 minute video giving actionable, in-depth advice on a complex topic. This is for warm leads seeking your expertise and demonstrates your authority beyond doubt.", scripting: "Structure: 1. The Hook: 'If you're struggling with [Complex Problem], you're not alone. Here's my 3-step framework to solve it.' 2. The Steps: Clearly walk through each step with on-screen graphics for support. 3. The CTA: 'If this was helpful, DM me for a template that walks you through this process.'", post: "Post Idea: A detailed how-to guide as a text post with bullet points and clear formatting. Offer a free resource (template, checklist) in exchange for a comment or DM to generate leads.", ai_prompt: "Act as an expert instructional designer and B2B scriptwriter. Create a 3-minute 'deep-dive explainer' video script for a CEO in [Your Industry]. The topic is solving [a complex, high-value customer problem]. Structure the script: 1. A hook that states the problem and promises a clear framework. 2. Three distinct, actionable steps to solve the problem, with placeholders for on-screen visuals. 3. A clear call-to-action that invites viewers to request a related resource via DM to generate leads. The tone must be authoritative and educational." }
            };

            function updateMatrix(key) {
                const item = contentData[key.replace("-", "_")];
                detailsEl.innerHTML = `<h3 class="text-2xl font-bold text-white mb-4">${item.title}</h3><div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm"><div class="bg-slate-800 p-4 rounded-lg"><h4 class="font-semibold text-brand-accent mb-2">${item.video}</h4><p class="text-slate-400 mb-3">${item.video_desc}</p><h5 class="font-semibold text-white">Scripting & Structure:</h5><p class="text-slate-400">${item.scripting}</p></div><div class="bg-slate-800 p-4 rounded-lg"><h4 class="font-semibold text-brand-accent mb-2">Text & Image Post Idea</h4><p class="text-slate-400">${item.post}</p></div></div><div class="mt-6 bg-slate-800 p-4 rounded-lg"><div class="flex justify-between items-center"><h4 class="font-semibold text-brand-accent">Generative AI Prompt Starter</h4><button class="copy-btn bg-slate-700 text-xs text-white px-2 py-1 rounded hover:bg-slate-600 transition-colors">Copy Prompt</button></div><div class="mt-2 p-3 bg-slate-900 rounded"><code class="text-xs text-slate-300 prompt-code">${item.ai_prompt}</code></div></div>`;
            }

            cells.forEach(cell => {
                cell.addEventListener("click", () => {
                    cells.forEach(c => c.classList.remove("active"));
                    cell.classList.add("active");
                    updateMatrix(cell.dataset.content);
                });
            });

            detailsEl.addEventListener('click', function(e) {
                if (e.target.classList.contains('copy-btn')) {
                    const text = e.target.closest('.bg-slate-800').querySelector('.prompt-code').innerText;
                    navigator.clipboard.writeText(text).then(() => {
                        e.target.innerText = 'Copied!';
                        setTimeout(() => { e.target.innerText = 'Copy Prompt'; }, 2000);
                    });
                }
            });
            
            updateMatrix("know-entertain");
        }
    
        // --- INITIALIZER FOR PART 3 ---
        function initPart3() {
            const container = document.getElementById('part3-container');
            if (!container) return;
            const tabs = container.querySelectorAll('.month-tab');
            const contents = container.querySelectorAll('.month-content');
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    contents.forEach(c => c.classList.remove('active'));
                    tab.classList.add('active');
                    container.querySelector(`#${tab.dataset.target}`).classList.add('active');
                });
            });
        }
        
        // --- INITIALIZER FOR PART 4 ---
        function initPart4() {
            const container = document.getElementById('part4-container');
            if (!container) return;
    
            const matrixData = {
                trends: { know: { title: 'Angle: Share a Surprising Statistic', video: 'A 30s reaction video to a new industry report.', post: 'Post a chart with a provocative question to your network.' }, like: { title: 'Angle: Post an "Unpopular Opinion"', video: 'A "Myth vs. Fact" video debunking a common trend.', post: 'A text post starting with "Hot take:" followed by your contrarian view.' }, trust: { title: 'Angle: Publish a Predictive Analysis', video: 'A "Deep-Dive Explainer" on trends that will define the next 18 months.', post: 'A long-form article or carousel detailing your predictions.' }},
                pains: { know: { title: 'Angle: Ask a Simple, Relatable Question', video: 'A quick selfie video asking, "What\'s the one task you wish you could automate?"', post: 'A poll about the most time-consuming part of your audience\'s week.' }, like: { title: 'Angle: Share a Relatable Struggle', video: 'A "Lesson from a Mistake" video about a time you struggled with their problem.', post: 'An authentic story about a past failure and what it taught you.' }, trust: { title: 'Angle: Provide a Tangible Solution', video: 'A "Framework in 90s" video that names their problem and offers a solution.', post: 'A how-to guide with a downloadable checklist to solve a specific pain point.' }},
                culture: { know: { title: 'Angle: Show a Glimpse of Your World', video: 'A quick, fun "Day in the Life" snippet video.', post: 'A photo from a team outing with a simple, positive caption.' }, like: { title: 'Angle: Highlight Company Values in Action', video: 'A video celebrating a team member who embodied a core value.', post: 'A post about your company\'s mission and why it matters personally.' }, trust: { title: 'Angle: Showcase Your Team\'s Expertise', video: 'A "Meet the Expert" interview with a key team member.', post: 'A post highlighting a team member\'s recent achievement or certification.' }},
                proof: { know: { title: 'Angle: Share an Anonymous Insight', video: 'A video sharing a key insight learned from a recent client conversation.', post: '"Spoke with a client today who said something brilliant..."' }, like: { title: 'Angle: Post a Client Testimonial', video: 'A short video featuring a client quote as on-screen text.', post: 'A quote graphic with a testimonial, tagging the client (with permission).' }, trust: { title: 'Angle: Release a Case Study', video: 'A "Client Proof Capsule" video detailing the Problem, Solution, and Quantifiable Result.', post: 'A detailed breakdown of a successful project, showcasing your process.' }}
            };
    
            const mainNav = container.querySelector('#main-nav-p4');
            const tabs = mainNav ? Array.from(mainNav.querySelectorAll('.tab-btn')) : [];
            const sections = Array.from(container.querySelectorAll('main > .content-section'));
            const pillarSelector = container.querySelector('#pillar-selector');
            const phaseSelector = container.querySelector('#phase-selector');
            const matrixOutput = container.querySelector('#matrix-output');
            const frameworkSelector = container.querySelector('#framework-selector');
            const frameworkExamples = container.querySelectorAll('.framework-example');
    
            function switchMainTab(targetId) {
                tabs.forEach(tab => {
                    const isActive = tab.dataset.target === targetId;
                    tab.classList.toggle('tab-active', isActive);
                    tab.classList.toggle('tab-inactive', !isActive);
                });
                sections.forEach(section => {
                    section.classList.toggle('active', section.id === targetId);
                });
            }
    
            function updateMatrix() {
                if (!pillarSelector || !phaseSelector || !matrixOutput) return;
                const pillarBtn = pillarSelector.querySelector('button.active');
                const phaseBtn = phaseSelector.querySelector('button.active');
                if (!pillarBtn || !phaseBtn) return;
                const pillar = pillarBtn.dataset.pillar;
                const phase = phaseBtn.dataset.phase;
                const data = matrixData[pillar][phase];
                matrixOutput.innerHTML = `<h3 class="text-xl font-bold text-white mb-4">${data.title}</h3><div class="space-y-4"><div class="bg-slate-800 p-4 rounded-lg"><h4 class="font-semibold text-brand-accent mb-2">Video Idea</h4><p class="text-sm text-slate-400">${data.video}</p></div><div class="bg-slate-800 p-4 rounded-lg"><h4 class="font-semibold text-brand-accent mb-2">Text/Image Post Idea</h4><p class="text-sm text-slate-400">${data.post}</p></div></div>`;
            }
            
            function calcRoi() {
                const acv = parseFloat(container.querySelector("#acv")?.value) || 0;
                const lift = parseFloat(container.querySelector("#lift")?.value) || 0;
                const opportunities = parseFloat(container.querySelector("#opportunities")?.value) || 0;
                const resultEl = container.querySelector("#roi-result");
                if (resultEl) {
                    const result = acv * (lift / 100) * opportunities;
                    resultEl.textContent = "£" + result.toLocaleString("en-GB", {minimumFractionDigits:0, maximumFractionDigits:0});
                }
            }
    
            if (mainNav) {
                mainNav.addEventListener('click', (e) => {
                    const clickedTab = e.target.closest('.tab-btn');
                    if (clickedTab) switchMainTab(clickedTab.dataset.target);
                });
            }
    
            function setupSelector(selector, callback) {
                if (!selector) return;
                selector.addEventListener('click', e => {
                    const button = e.target.closest('button');
                    if (button) {
                        Array.from(selector.querySelectorAll('button')).forEach(b => b.classList.remove('active'));
                        button.classList.add('active');
                        if (callback) callback();
                    }
                });
            }
            
            setupSelector(pillarSelector, updateMatrix);
            setupSelector(phaseSelector, updateMatrix);
            setupSelector(frameworkSelector, () => {
                const button = frameworkSelector.querySelector('button.active');
                if (button) {
                    const frameworkId = button.dataset.framework + '-example';
                    frameworkExamples.forEach(ex => ex.classList.toggle('active', ex.id === frameworkId));
                }
            });
    
            ['acv', 'lift', 'opportunities'].forEach(id => {
                const el = container.querySelector(`#${id}`);
                if (el) el.addEventListener('input', calcRoi);
            });
    
            if (tabs.length > 0) switchMainTab(tabs[0].dataset.target);
            updateMatrix();
            calcRoi();
        }
    
        // --- RUN ALL INITIALIZERS ---
        initPart1();
        initPart2();
        initPart3();
        initPart4();
        // Part 5 has no JS, so no initPart5() is needed.
    });
    </script>
</body>
</html>
